<% if @inactive_flavors.empty? %>
  <p><em>There are no inactive flavors at this time.</em></p>
<% else %>
  <h3>Inactive Flavors</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_flavors.each do |flavor| %>
        <tr>
          <td><%= link_to flavor.name, flavor_path(@flavor) %></td>
          <!-- insert link to stores with this flavor -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @inactive_flavors, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>