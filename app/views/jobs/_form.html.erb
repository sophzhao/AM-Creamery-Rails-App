<%= simple_form_for @job, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Job</legend>

    <%= f.input :name, input_html: {class: "avg"} %>
    <%= f.input :description, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', jobs_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>